{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@ui/*": ["./src/ui-submodule/src/*"],
      "@/*": ["./src/*"],
      "@drizzle/*": ["./drizzle/*"],
      "@components/*": ["src/components/*"],
      "@app/*": ["app/*"],
      "@locales/*": ["locales/*"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "drizzle/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
